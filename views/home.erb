<h1 class="center" style="font-size: 64px;">2016 Pollster</h1>

<div class="row">
  <div class="col-md-6">
    <h2 class="center">Democrats:</h2>
    <h4>Led by <%= @democratic_leader %>...</h4>

    <table class="table table-striped">
      <tr>
        <th>Candidate</th>
        <th>Percentage</th>
      </tr>
      <tr>
      <% @democratic_standings.each do |candidate| %>
        <td><%= candidate.first %></td>
        <td><%= candidate.last %>%</td>
      </tr>
      <% end %>
    </table>

  </div>

  <div class="col-md-6">
    <h2 class="center">Republicans:</h2>
    <h4>Led by <%= @republican_leader %>...</h4>

    <table class="table table-striped">
      <tr>
        <th>Candidate</th>
        <th>Percentage</th>
      </tr>
      <tr>
      <% @republican_standings.each do |candidate| %>
        <td><%= candidate.first %></td>
        <td><%= candidate.last %>%</td>
      </tr>
      <% end %>
    </table>

  </div>
</div>
